remedios=[]

opcao=0

def Menu():
    print("*** Menu ***")
    print("[1] Cadastrar remedio")
    print("[2] Listar remedios cadastrados")
    print("[3] Quantidade estoque")
    print("[4] Data de vencimento")
    print("[5] Remover produtos vencidos")
    print("[6] Sair ")
    

    opcao= input('Digite a opçao desejada: ') 
    return opcao
def cadastraRemedio():
    
    entrada="S"
    while entrada =="S":
    
        listaRemedios=[]
        codigo=int(input(" digite o codigo de barra:"))
        remedio=str.upper(input("Digite o nome do remedio para cadatramento:"))
        quant=int(input("digite a quntidade disponivel:"))
        datavencimento=str(input("digite a data de vecimento do remedio:"))
        listaRemedios.append(codigo)
        listaRemedios.append(remedio)
        listaRemedios.append(quant)
        listaRemedios.append(datavencimento)
        remedios.append(listaRemedios)
        entrada=str.upper(input("continuar?[S/N]"))


def sel_por_nome(remedios):
    letraRemedio = input("Digite a letra do remédio: ")
    resultado = []
    for rem in remedios:
        if (rem[1][0] == letraRemedio):
            resultado.append(rem)
            return resultado
            
def adicionarCodigo ():
    remedio = str(input("Digite o codigo do remédio:"))
    if remedio in remedios:
        print('Remedios já Cadastrados',remedios)
    pass
        
def listarRemediosCadastrados ():
    print("Remedios cadastrados", remedios)
    


def remedioVencidos():
    dataatuais=input("digite data atual:")
    
    diaAtual= dataatuais[0:2]
    mesAtual=dataatuais[3:5]
    
   
    diaC=int(diaAtual)
    
    mesC=int(mesAtual)
            
    for i in range (len(remedios)):
        
        x=int(remedios[i][3][0:2])#dia lista

        y=int(remedios[i][3][3:5])#mes lista
        
        dia=int(x)

        mes=int(y)

        if(dia>diaC and mes > mesC):
            print(remedios[i])

        elif (diaC<dia ):
           
            if(mesC>mes):
               
                print(remedios[i])
        

    
def removerRemedioVencidos ():
    dataatuais=input("digite data atual[mes/ano]:")
    mesAtual= dataatuais[0:2]#mes
    anoAtual=dataatuais[3:7]#ano
    mesC=int(diaAtual) 
    anoC=int(mesAtual)
    encontrados = []
    for i in range (len(remedios)):
        x=int(remedios[i][3][0:2])#mes lista
        y=int(remedios[i][3][3:7])#ano lista
        if(y<anoC):
            encontrados.append(remedios[i])
        elif (y==anoC) and (x<mesC):
            encontrados.append(remedios[i])
    if(len(encontrados) > 0):
        for x in encontrados:
            remedios.remove(x)
         
    else:
        print("nenhum remedio vencido encontrado")

  

    
