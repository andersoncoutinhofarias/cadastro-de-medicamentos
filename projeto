remedios=[]

opcao=0

def Menu():
    print("*** Menu ***")
    print("[1] Cadastrar remedio")
    print("[2] selecionar por nome")
    print("[3] Verificar se está cadastrado por código")
    print("[4] Listar Remedios Cadastrados")
    print("[5] Remedios vencidos")
    print("[6] Remover produtos vencidos")
    print("[7] Quantidade total de remedios cadastrdo")
    print("[8] sair ")
    

    opcao= input('Digite a opÃ§ao desejada: ') 
    return opcao
def cadastraRemedio():

    
    entrada="S"
    while entrada =="S":
    
        listaRemedios=[]
        codigo=int(input("digite o codigo de barra:"))
        remedio=input("Digite o nome do remedio para cadatramento:").upper()
        quant=int(input("digite a quntidade disponivel:"))
        datavencimento=str(input("digite a data de vecimento do remedio [mes/ano]:"))
        listaRemedios.append(codigo)
        listaRemedios.append(remedio)
        listaRemedios.append(quant)
        listaRemedios.append(datavencimento)
        remedios.append(listaRemedios)
        entrada=str.upper(input("continuar?[S/N]"))



def sel_por_nome(remedios):
    letraRemedio = input("Digite a letra do remédio: ")
    resultado = []
    for rem in remedios:
        if (rem[1][0] == letraRemedio):
            resultado.append(rem)
            return resultado

def adicionarCodigo(remedios):
    codigo = int(input("Digite o codigo do remedio:"))
    achou= False
    for  rem in remedios:
        if codigo == rem[0]:
            print('Remedios ja¡ Cadastrados')
            achou=True
    if(achou == False):
        print('Remedio ainda nao cadastrado')
        
def listarRemediosCadastrados ():
    print("Remedios cadastrados", remedios)
    


def Remediovencidos():
    dataatuais=input("digite data atual[mes/ano]:")
    mesAtual= dataatuais[0:2]#mes
    anoAtual=dataatuais[3:7]#ano
    mesC=int(mesAtual)
    anoC=int(anoAtual)
    achou = False
    for i in range (len(remedios)):
        x=int(remedios[i][3][0:2])#mes lista
        y=int(remedios[i][3][3:7])#ano lista
        if(y<anoC):
            print(remedios[i])
            achou = True
        elif (y<=anoC) and (x<=mesC):
            print(remedios[i])
            achou = True
        
    if(achou == False):
        print("nenhum remedio vencido encontrado")
               
def removerRemedioVencidos ():
    dataatuais=input("digite data atual[mes/ano]:")
    diaAtual= dataatuais[0:2]#mes
    mesAtual=dataatuais[3:7]#ano
    mesC=int(diaAtual) 
    anoC=int(mesAtual)
    encontrados = []
    achou = False
    for i in range (len(remedios)):
        x=int(remedios[i][3][0:2])#mes lista
        y=int(remedios[i][3][3:7])#ano lista
        if(y<anoC):
            encontrados.append(remedios[i])
        elif (y<=anoC) and (x<=mesC):
            encontrados.append(remedios[i])
    if(len(encontrados) > 0):
        for x in encontrados:
            remedios.remove(x)
            print("remedios removidos",encontrados)
            achou = True
    elif(achou == False):
        print("nenhum remedio vencido encontrado,para ser removido")

def quanttotal_cadastrado():
    total=0
    for i in remedios:
        quant=int([i][2])
        quanttotal=total+quant
        print("a quantidade total de remedis cadastrado é",quanttotal)
        
